<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/backgroundImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/forestaltar"
        android:scaleType="centerCrop"/>

    <TextView
        android:id="@+id/Explications"
        android:layout_width="400dp"
        android:layout_height="280dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/rectanglebox"
        android:gravity="center"
        android:text="You approach the dungeon's entrance, a chill crawling down your spine. The path ahead is uncertain, but the rewards could be legendary. Steel your nerves... fortune awaits !"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textStyle="bold"/>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_height="500dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="80dp"
        android:layout_marginLeft="80dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Explications"
        android:layout_width="300dp"
        android:background="#70D3D3D3">

        <TextView
            android:id="@+id/Game1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:text="Minigame n°1 : -"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/Score1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Score : -"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Game1"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/Game2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:text="Minigame n°1 : -"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Game1"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/Score2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Score : -"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Game2"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/Game3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:text="Minigame n°1 : -"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Game2"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/Score3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Score : -"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Game3"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/FinalScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="75dp"
            android:text="Final score :"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Game3"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/button"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="75dp"
            android:background="@drawable/button"
            android:onClick="goToMenu"
            android:text="Go back to menu"
            android:visibility="invisible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/FinalScore" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>